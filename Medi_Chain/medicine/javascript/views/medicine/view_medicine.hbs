            Details</a>
        
          {{#if del}}
          {{#if this.expired}}
          <button type="button" class="btn btn-danger pull-left" disabled>Expired!!!</button>
          
          <a href="{{concate "/delete_medicine/" this.Id}}" class="btn btn-secondary pull-left" role="button">Delete
            Medicine</a>
          
            {{else}}
            <a href="{{concate "/delete_medicine/" this.Id}}" class="btn btn-secondary pull-left" role="button">Delete
              Medicine</a>
            {{/if}}
            {{else}}
            {{#if this.expired}}
            <button type="button" class="btn btn-danger" disabled>Expired!!!</a>
              {{else}}
              
              {{#if this.Flg }}
              <a href="{{concate "/buy_click/" this.Id}}" class="btn btn-success pull-left" role="button">Buy</a>

              {{else}}
              <a href="{{concate "/cancel_click/" this.Id}}" class="btn btn-secondary pull-left" role="button">Cancel
                Request</a>

              {{/if}}
