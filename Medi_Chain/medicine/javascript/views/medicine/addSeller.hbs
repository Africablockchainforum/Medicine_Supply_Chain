<body class="container" >
    <div class="col-md-4 offset-md-4 centered">
        <h1 style="text-align: center;color:white">Add Seller</h1>
        {{#if message }}
        <div class="alert alert-{{mode}}">

            <p>{{message}}</p>

        </div>
        {{/if}}

        <form action="/addSeller" method="post">
            <div class="form-group" style="color:white">
                <label for="id">ID</label>
                <input type="text" id="id" name="id" class="form-control">
            </div>
            <div class="form-group" style="color:white">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" class="form-control">
            </div>
            <div class="form-group" style="color:white">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <!--<div class="form-group">
            <label for="type">Seller Type</label>
            <input type="text" id="type" name="type" class="form-control">
        </div>-->
            <label for="type" style="color: white">Seller Type</label><br/>
            <div class="form-check form-check-inline" style="color:white">
                <input class="form-check-input" type="radio" name="type" id="type" value="producer">
                <label class="form-check-label" for="type">producer</label>
            </div>
            <div class="form-check form-check-inline" style="color:white">
                <input class="form-check-input" type="radio" name="type" id="type" value="dealer">
                <label class="form-check-label" for="type">dealer</label>
                <br />
            </div>
            <br/>
            <br/>

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-info">Submit</button>
        </form>

    </div>
    </body>